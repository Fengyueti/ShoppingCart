<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <CheckBox
        android:id="@+id/checkbox"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/img"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintLeft_toRightOf="@id/checkbox"
        android:layout_marginLeft="10dp"
        />
    <RelativeLayout
        android:id="@+id/rv"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/img"
        app:layout_constraintRight_toLeftOf="@id/addminusView"
        >
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="2"
            android:text="商品商品"
            android:ellipsize="end"
            android:layout_marginLeft="35dp"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="2"
            android:text="商品商品"
            android:ellipsize="end"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="35dp"
            android:gravity="center"
            />
    </RelativeLayout>
    <com.example.shopping.width.AddMinusView
        android:id="@+id/addminusView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/rv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"></com.example.shopping.width.AddMinusView>
</android.support.constraint.ConstraintLayout>